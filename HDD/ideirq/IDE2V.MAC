;		 прерывание процесса и переключаем окна #2,3
;		R1 - начало области для операции.
;
;		Called from : ...
;▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

.if	DF	$BIOS

SETMAP:	clr	R0
	asl	R1			;	ashc	#3, R0
	rol	R0			;
	asl	R1			;
	rol	R0			;
	asl	R1			;
	rol	R0			;
	asl	R0
	ror	R1
	sec
	ror	R1
	ror	R1
	mov	hr.map(R0), UR2
	mov	hr.map+2(R0), UR3
	return

.iff

SETMAP:	clr	R0

	asl	R1			;	ashc	#3, R0
	rol	R0			;
	asl	R1			;
	rol	R0			;
	asl	R1			;
	rol	R0			;

	asl	R0

	sec
	ror	R1			; 1xxxxx
	ror	R1			; 01xxxxx
	ror	R1			; 001xxx
	mov	hr.map(R0), UR1
	mov	hr.map+2(R0), UR2
	mov	hr.map+4(R0), UR3
	return
.endc

